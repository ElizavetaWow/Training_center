<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.PlaceOverviewController">
    <children>
        <Label layoutX="26.0" layoutY="25.0" text="Addresses" />
        <HBox layoutX="343.0" layoutY="352.0" prefHeight="25.0" prefWidth="222.0" spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleNewPlace" prefHeight="25.0" prefWidth="70.0" text="New" />
                <Button mnemonicParsing="false" onAction="#handleEditPlace" prefHeight="25.0" prefWidth="70.0" text="Edit" />
                <Button mnemonicParsing="false" onAction="#handleDeletePlace" prefHeight="25.0" prefWidth="70.0" text="Delete" />
            </children></HBox>
      <TableView fx:id="placeTableView" layoutX="23.0" layoutY="98.0" prefHeight="222.0" prefWidth="549.0">
